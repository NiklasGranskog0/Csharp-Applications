@model List<NewsItem>
@{
    ViewData["Title"] = "NewsIndex";
}

<p><a asp-action="Create" class="btn btn-outline-primary">Add news Story</a></p>

@foreach (var item in Model)
{
    <div class="container">
        <div class="row align-items-start">
            <div class="border p-3 mb-3">
                <a class="newsLink" href="@item.Url" target="_blank">
                    <h4>@item.Title</h4>
                    <p>@item.Content</p>
                    <p>@item.Date</p>
                </a>

                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            </div>
        </div>
    </div>
}