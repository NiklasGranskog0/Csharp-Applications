<Window x:Class="CashFlowManagement.NewTransaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:CashFlowManagement"
        mc:Ignorable="d"
        Title="NewTransaction" Height="450" Width="800">
    <Grid>
        <Label Content="Date" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
        <DatePicker x:Name="DatePicker" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,0,0,0"></DatePicker>
        
        <Label Content="Amount" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,30,0,0"></Label>
        <TextBox x:Name="AmountTextBox" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,30,0,0"></TextBox>
        
        <Label Content="Description" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,0"></Label>
        <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBox x:Name="DescriptionBox" VerticalAlignment="Top" HorizontalAlignment="Center" Width="100" Height="100" Margin="0, 0, 0, 0" TextWrapping="Wrap"></TextBox>
        </Border>
        
        <Label Content="Category Name" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,60,0,0"></Label>
        <TextBox x:Name="CategoryNameBox" Width="100" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,60,0,0"></TextBox>
        
        <Label Content="Category Type" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,90,0,0"></Label>
        <ComboBox x:Name="CategoryTypeComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Margin="100, 90, 0, 0"></ComboBox>
        
        <Label Content="Business/Individual" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,120,0,0"></Label>
        <ComboBox x:Name="BusinessComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="80" Margin="120, 120, 0, 0"></ComboBox>
        
        <Button Content="Add Transaction" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="110,20,0,100" Click="AddTransaction_Click"></Button>
        
    </Grid>
</Window>
