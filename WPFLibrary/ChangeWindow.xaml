<Window x:Class="WPFLibrary.ChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPFLibrary"
        mc:Ignorable="d"
        Title="ChangeWindow" Height="250" Width="800">
    <Grid>
         <GroupBox x:Name="BookGroupBox" Header="Book" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="200">
            <Grid>
                <Label Content="Title" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Author" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Genre" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Page Count" Margin="0,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Rating" Margin="0,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                
                <TextBox x:Name="BookTitle" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25"></TextBox>
                <TextBox x:Name="BookAuthor" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,30,0,0"></TextBox>
                <ComboBox x:Name="BookGenre" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,60,0,0" IsReadOnly="True"></ComboBox>
                <TextBox x:Name="BookPageCount" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,90,0,0"></TextBox>
                <ComboBox x:Name="BookRating" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,120,0,0" IsReadOnly="True"></ComboBox>
            </Grid>
        </GroupBox>
        
        <GroupBox x:Name="MovieGroupBox" Header="Movie" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Height="200" Margin="0,0,180,0">
            <Grid>
                <Label Content="Title" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Main Actor" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Genre" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Duration(min)" Margin="0,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Rating" Margin="0,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                
                <TextBox x:Name="MovieTitle" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25"></TextBox>
                <TextBox x:Name="MovieActor" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,30,0,0"></TextBox>
                <ComboBox x:Name="MovieGenre" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,60,0,0" IsReadOnly="True"></ComboBox>
                <TextBox x:Name="MovieDuration" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,90,0,0"></TextBox>
                <ComboBox x:Name="MovieRating" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,120,0,0" IsReadOnly="True"></ComboBox>
            </Grid>
        </GroupBox>
        
        <GroupBox x:Name="GameGroupBox" Header="Game" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Height="200" Margin="0,0,180,0">
            <Grid>
                <Label Content="Title" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Publisher" Margin="0,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Genre" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Developer" Margin="0,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                <Label Content="Rating" Margin="0,120,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"></Label>
                
                <TextBox x:Name="GameTitle" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25"></TextBox>
                <TextBox x:Name="Publisher" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,30,0,0"></TextBox>
                <ComboBox x:Name="GameGenre" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,60,0,0" IsReadOnly="True"></ComboBox>
                <TextBox x:Name="Developer" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,90,0,0"></TextBox>
                <ComboBox x:Name="GameRating" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Height="25" Margin="0,120,0,0" IsReadOnly="True"></ComboBox>
            </Grid>
        </GroupBox>
        
        <Button Content="OK" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Margin="0,30,50,0" Click="Ok_Click"></Button>
        <Button Content="Cancel" VerticalAlignment="Top" HorizontalAlignment="Right" Width="100" Margin="0,140,50,0" Click="Cancel_Click"></Button>
    </Grid>
</Window>
