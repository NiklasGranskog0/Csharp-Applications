<Window x:Class="DuplicateFinderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuplicateFinderApp"
        xmlns:files="clr-namespace:DuplicateFinderApp.Files"
        mc:Ignorable="d"
        Title="Duplicate Finder" Height="800" Width="1000">
    <Grid>
        <Label Name="FilePathLabel" Content="File Path" VerticalAlignment="Top" HorizontalAlignment="Left" Width="auto"
               FontWeight="Bold">
        </Label>

        <GroupBox Header="Attributes" Margin="25,50,625,600" BorderBrush="Black" BorderThickness="2"
                  HorizontalAlignment="Left">
            <Grid>
                <CheckBox Name="NameCheckBox" Content="Name" Margin="0,0,0,0" Width="150" Height="15"
                          VerticalAlignment="Top" HorizontalAlignment="Left" />
                <CheckBox Name="ModifiedDateCheckBox" Content="Modified Date" Margin="0,15,0,0" Width="250" Height="15"
                          VerticalAlignment="Top" HorizontalAlignment="Left" />
                <CheckBox Name="CreatedDateCheckBox" Content="Created Date" Margin="0,30,0,0" Width="250" Height="15"
                          VerticalAlignment="Top" HorizontalAlignment="Left" />
                <CheckBox Name="SizeCheckBox" Content="Size" Margin="0,45,0,15" Width="150" Height="15"
                          VerticalAlignment="Top" HorizontalAlignment="Left" />
                <!-- <CheckBox Name="HashCheckBox" Content="Hash" Margin="0,60,0,0" Width="150" Height="15" VerticalAlignment="Top" HorizontalAlignment="Left"/> -->
            </Grid>
        </GroupBox>

        <GroupBox Header="File Types" Margin="350,50,150,600" BorderBrush="Black" BorderThickness="2"
                  HorizontalAlignment="Left">
            <Grid>
                <CheckBox Name="AllFilesCheckBox" Content="All Files (*.*)" Margin="0,0,0,0" Width="150" Height="15"
                          VerticalAlignment="Top" HorizontalAlignment="Left" />
                <CheckBox Name="PicturesCheckBox" Content="Pictures (*.png, *.jpg, *.jpeg)" Margin="0,15,0,0"
                          Width="250" Height="15" VerticalAlignment="top" HorizontalAlignment="Left" />
                <CheckBox Name="PdfCheckBox" Content="PDF (*.pdf)" Margin="0,30,0,0" Width="250" Height="15"
                          VerticalAlignment="Top" HorizontalAlignment="Left" />
                <CheckBox Name="TextFilesCheckBox" Content="Text Files (*.txt)" Margin="0,45,0,0" Width="150"
                          Height="15" VerticalAlignment="Top" HorizontalAlignment="Left" />
            </Grid>
        </GroupBox>

        <Button Name="BrowseButton" Content="Browse Folder" Width="100" Height="25" VerticalAlignment="Top"
                HorizontalAlignment="Right" Margin="0,223,875,0" Click="BrowseButton_OnClick">
        </Button>
        <Button Name="FindButton" Content="Find" Width="100" Height="25" VerticalAlignment="Top"
                HorizontalAlignment="Right" Margin="0,223,744,0" Click="FindButton_OnClick">
        </Button>
        <Button Name="CancelButton" Content="Cancel" Width="50" Height="25" VerticalAlignment="Top"
                HorizontalAlignment="Right" Margin="0,223,678,0" Click="CancelButton_OnClick">
        </Button>

        <Label Content="Progress Bar" HorizontalAlignment="Left" Width="100" Margin="331,216,0,514"
               VerticalContentAlignment="Top">
        </Label>
        <Border Margin="431, 216, 273, 509" BorderBrush="Black" BorderThickness="2">
            <Grid>
                <ProgressBar Name="ProgressBar"  />
                <TextBlock Name="ProgressTextBlock" Text="0%" HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontWeight="Bold">
                </TextBlock>
            </Grid>
        </Border>

        <GroupBox Header="Duplicate files" VerticalAlignment="Top" HorizontalAlignment="Center" Width="980"
                  Height="480" Margin="0,275,0,0" BorderBrush="Black" BorderThickness="2">
            <ListView ItemsSource="{Binding Files}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding FileName}" Width="250" />
                        <GridViewColumn Header="Path" DisplayMemberBinding="{Binding FullPath}" Width="250" />
                        <GridViewColumn Header="Size (MB)" DisplayMemberBinding="{Binding SizeMb}" Width="100" />
                        <GridViewColumn Header="Modified" DisplayMemberBinding="{Binding LastWriteTime}" Width="200" />
                        <GridViewColumn Header="Created" DisplayMemberBinding="{Binding CreatedDate}" Width="180" />
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <Label x:Name="FindException" Content="" VerticalAlignment="Top" HorizontalAlignment="Left" Width="auto"
               Margin="27,173,0,0" Height="50" FontSize="20" />

    </Grid>
</Window>